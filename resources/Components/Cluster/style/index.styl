.cluster
  font-size 17px
  font-weight 400
  border-radius 20px
  -webkit-app-region no-drag
  transition none
  transform translate3d(0, 0, 0)
  font-family 'MainFont'
  display flow-root
  background #002739
  margin 6px
  padding 2px 0px 1px 0px

  .clusterRow
    display flex
    justify-content center
    align-items stretch
    font-weight 300
    margin-left 3px

  .clusterValue
    flex-grow 1
    display flex
    justify-content center
    align-items center
    margin-right 3px
    font-size 14px
    display flex
    justify-content center
    align-items center
    border-radius 8px
    -webkit-app-region no-drag
    transition all linear 0.1s
    transform translate3d(0, 0, 0)
    font-family 'MainFont'
    background #0C3344
    box-shadow 0px 1px 2px var(--ghostX)
    border-bottom 2px solid #002739
    overflow hidden
    margin-top 1px

    *
      pointer-events none

    .clusterInputLabel
      position absolute
      top 0
      left 0
      right 0
      width 60px
      display flex
      justify-content center
      align-items center

  .clusterValueClickable
    cursor pointer
    margin-bottom 0px
    position relative

  .clusterValueInteractable
    *
      pointer-events auto

  .clusterValueClickable:hover
    background #002739
    transform translateY(-1px)
    border-bottom 2px solid #002739
    box-shadow 0px 4px 30px -8px var(--ghostX)
    position relative
    z-index 300000
  
  .clusterValueClickable:active
    background #002739
    transform translateY(0px)
    box-shadow 0px 2px 4px var(--ghostX)

  .clusterValueTransparent
    background transparent
    box-shadow none
    border-bottom 2px solid transparent

  .clusterRow:first-child
    > .clusterValue
      border-radius 8px
    > .clusterValue:first-child
      border-top-left-radius 8px
    > .clusterValue:last-child
      border-top-right-radius 8px

  .clusterRow:last-child
    > .clusterValue
      border-radius 8px
    > .clusterValue:first-child
      border-bottom-left-radius 8px
    > .clusterValue:last-child
      border-bottom-right-radius 8px

  .clusterColumn
    display flex
    flex-direction column
    flex-grow 1
    font-size 14px
    align-items stretch

    .clusterValue
      border-radius 8px

  .clusterColumn:first-child
    > .clusterValue
      border-radius 8px
    > .clusterValue:first-child
      border-top-left-radius 18px
      
  .clusterColumn:last-child
    > .clusterValue
      border-radius 8px
    > .clusterValue:first-child
      border-top-right-radius 18px

  .clusterRow:last-child
    .clusterColumn:first-child
      > .clusterValue
        border-radius 8px
      > .clusterValue:first-child
        border-top-left-radius 18px
      > .clusterValue:last-child
        border-bottom-left-radius 18px
      > .clusterValue:first-child:last-child
        border-top-left-radius 18px
        border-bottom-left-radius 18px
        
    .clusterColumn:last-child
      > .clusterValue
        border-radius 8px
      > .clusterValue:first-child
        border-top-right-radius 18px
      > .clusterValue:last-child
        border-bottom-right-radius 18px
      > .clusterValue:first-child:last-child
        border-top-right-radius 18px
        border-bottom-right-radius 18px

.clusterTag
  text-transform uppercase
  font-size 11px
  font-weight 500
  padding 8px
  text-align center

.clusterFocus
  text-transform uppercase
  font-size 13px
  line-height 20px
  font-weight 500
  padding 16px 8px
  text-align center

  .clusterFocusHighlight
    font-size 16px
    color var(--good)

.clusterAddress
  padding 12px
  font-size 14px
  font-weight 600
  cursor pointer

.clusterAddressRecipient
  font-size 16px
  font-weight 300
  font-family 'FiraCode'
  display flex
  justify-content center
  align-items center
  pointer-events none
  
  svg
    padding 0px 4px !important

.clusterAddressRecipientFull
  position absolute 
  top 0
  left 0
  bottom 0px
  right 0
  padding-bottom 1px
  display flex
  justify-content center
  align-items center
  cursor pointer
  z-index 40000
  border-radius 8px
  font-weight 500
  background #002739
  opacity 0
  z-index 4
  box-shadow 0px 4px 4px #002739
  transition 0.05s linear all

.clusterFira
  position relative
  top 1.5px
  left 1px
  font-weight 300
  font-size 13px 
  font-family 'FiraCode'

.clusterAddressRecipientFull:hover
  opacity 1
  transform translateX(0px) scale(1)
